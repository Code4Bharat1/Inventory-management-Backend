generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String        @id @default(uuid())
  name          String
  quantity      Int           @default(0)
  price         Float?
  category      String?
  description   String?
  imageUrl      String?
  note          String?
  minimumStock  Int?          @default(0)
  notification Notification[]
  shopRelations ProductShop[] // Relation to explicit table
  stockHistory  stockHistory[] // Relation to stock history
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Shop {
  id               String        @id @default(uuid())
  name             String        @unique
  description      String?
  logoUrl           String?
  slug             String        @unique
  isActive         Boolean       @default(true)
  productRelations ProductShop[] // Relation to explicit table
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model ProductShop {
  productId   String
  shopId      String
  product     Product @relation(fields: [productId], references: [id])
  shop        Shop    @relation(fields: [shopId], references: [id])
  stockInShop Int     @default(0) // Additional field

  @@id([productId, shopId]) // Composite primary key
}

model Notification {
  id String @id @default(uuid())
  type String
  message String
  product Product @relation(fields: [productId], references: [id])
  productId String
  isRead Boolean @default(false)
  createdAt DateTime @default(now())
}


model stockHistory {
  id String @id @default(uuid())
  productId String
  changeType String // e.g., "IN", "OUT"
  oldQuantity Int
  newQuantity Int
  actionedBy String // User or system that made the change
  action String // Description of the action taken
  product Product @relation(fields: [productId], references: [id])
  actionedAt DateTime @default(now())
}