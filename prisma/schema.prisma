generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String        @id @default(uuid())
  name          String
  quantity      Int           @default(0)
  price         Float?
  category      String?
  description   String?
  imageUrl      String?
  note          String?
  minimumStock  Int?          @default(0)
  shopRelations ProductShop[] // Relation to explicit table
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Shop {
  id               String        @id @default(uuid())
  name             String        @unique
  slug             String        @unique
  isActive         Boolean       @default(true)
  productRelations ProductShop[] // Relation to explicit table
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model ProductShop {
  productId   String
  shopId      String
  product     Product @relation(fields: [productId], references: [id])
  shop        Shop    @relation(fields: [shopId], references: [id])
  stockInShop Int     @default(0) // Additional field

  @@id([productId, shopId]) // Composite primary key
}
